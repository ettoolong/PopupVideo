{
  "title": "popup video",
  "name": "popup-video",
  "version": "0.0.4",
  "description": "Popup Youtube video to standalone window.",
  "main": "data/js/addon-script.js",
  "author": "ettoolong@hotmail.com",
  "engines": {
    "firefox": ">=38.0a1"
  },
  "icon": "resource://popup-video/data/img/icon.svg",
  "icon64": "resource://popup-video/data/img/icon.svg",
  "license": "MIT",
  "keywords": [
    "jetpack"
  ],
  "permissions":{
    "multiprocess": true,
    "private-browsing": true
  },
  "preferences": [{
    "name": "defaultSize",
    "type": "menulist",
    "title": "Default size",
    "value": 5,
    "options": [{"value": 0, "label": "425 x 344"},
                {"value": 1, "label": "480 x 385"},
                {"value": 2, "label": "640 x 505"},
                {"value": 3, "label": "960 x 745"},
                {"value": 4, "label": "280 x 160"},
                {"value": 5, "label": "560 x 320"},
                {"value": 6, "label": "640 x 360"},
                {"value": 7, "label": "853 x 480"},
                {"value": 8, "label": "1280 x 745"}],
    "description": "Set popup window default size."
  },
  {
    "name": "defaultPosition",
    "type": "menulist",
    "title": "Default window position",
    "value": 0,
    "options": [{"value": 0, "label": "center"},
                {"value": 1, "label": "topLeft"},
                {"value": 2, "label": "bottomLeft"},
                {"value": 3, "label": "topRight"},
                {"value": 4, "label": "bottomRight"}],
    "description": "Set popup window default position."
  },
  {
    "name": "resizable",
    "type": "bool",
    "title": "Resizable",
    "value": true,
    "description": "Set popup window resizable."
  },
  {
    "name": "contextMenu",
    "type": "bool",
    "title": "Context menu item",
    "value": true,
    "description": "Show [Popup video window] item in context menu."
  },
  {
    "name": "overlayIcon",
    "type": "bool",
    "title": "Add popup video icon on video/thumbnail",
    "value": true,
    "description": "Add popup video icon on video/thumbnail."
  },
  {
    "name": "alwaysTop",
    "type": "bool",
    "title": "Always top",
    "value": true,
    "description": "Set popup window always top."
  },
  {
    "name": "multiWindow",
    "type": "bool",
    "title": "Use multi window",
    "value": true,
    "description": "Allow popup multi video window."
  }]
}
